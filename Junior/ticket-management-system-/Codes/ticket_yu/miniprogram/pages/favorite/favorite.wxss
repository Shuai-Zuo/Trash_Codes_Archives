page {
  background-color: #f3f4f6;
}
.show_wrap {
  margin: 20rpx;
}
.show_wrap .show_item {
  display: flex;
  border-bottom: 1px solid #ccc;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.show_wrap .show_item .show_pic_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.show_wrap .show_item .show_pic_wrap image {
  width: 70%;
}
.show_wrap .show_item .show_info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.show_wrap .show_item .show_info_wrap .show_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.show_wrap .show_item .show_info_wrap .show_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
